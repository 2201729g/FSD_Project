@page "/feedbacks/create"
@inject HttpClient _client
@inject NavigationManager _navManager
@attribute [Authorize]


<h3 class="driverd-title">Create New Feedbacks</h3>
<hr />
<br />

<FormComponent ButtonText="Create Feedback" feedback="feedback" OnValidSubmit="@CreateFeedback" />


@code {
    Feedback feedback = new Feedback();

    private async Task CreateFeedback()
    {
        await _client.PostAsJsonAsync(Endpoints.FeedbacksEndpoint, feedback);
        _navManager.NavigateTo("/feedbacks/");
    }
}
