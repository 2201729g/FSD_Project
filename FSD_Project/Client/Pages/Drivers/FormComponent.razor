@using FSD_Project.Client.Components
<h3>FormComponent</h3>

<EditForm Model="@driver" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled" >

    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText @bind-Value="@driver.Name" class="form-control" />
            <ValidationMessage For="@(() => driver.Name)" />
        </div>
    </div>
    <div class="form-group">
        <label>License Number: </label>
        <div>
            <InputText @bind-Value="@driver.LicenseNo" class="form-control" />
            <ValidationMessage For="@(() => driver.LicenseNo)" />
        </div>
    </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="drivers" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Driver? driver { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }


}
