@using FSD_Project.Client.Components
<h3>FormComponent</h3>

<EditForm Model="@bill" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled" >

        <div class="form-group">
            <label>Distance: </label>
            <div>
                <InputNumber @bind-Value="@bill.Distance" class="form-control" />
                <ValidationMessage For="@(() => bill.Distance)" />
            </div>
        </div>
        <div class="form-group">
            <label>Amount: </label>
            <div>
                <InputNumber @bind-Value="@bill.Amount" class="form-control" />
                <ValidationMessage For="@(() => bill.Amount)" />
            </div>
        </div>
    <div class="form-group">
        <label>License Number: </label>
        <div>
            <InputText @bind-Value="@bill.LicenseNo" class="form-control" />
            <ValidationMessage For="@(() => bill.LicenseNo)" />
        </div>
    </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="bills" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Bill? bill { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }


}
